{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top Ranking Youtube of Each Countries and its Subscribers",
    "width": 500,
    "height": 400,
    "data": {
      "url": "Global YouTube Statistics.csv",
      "format": {
        "type": "csv"
      }
    },
    "transform": [
      {
        "window": [{"op": "rank", "as": "rank"}],
        "groupby": ["Country"]
      },
      {
        "filter": {"field": "rank", "equal": 1}
      },
      {
        "filter": "datum.Country !== 'nan'"
      }
      
    ],
    "projection": {
      "type": "azimuthalEqualArea"
    },
    "layer": [
      {
        "data": {
          "url": "ne_110m.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke":"whitesmoke"
        }
      },
      {
        "mark": {
          "type": "circle",
          "tooltip": true
        },
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {"field": "subscribers", "type": "quantitative"},
          
          "tooltip": [
            {"field": "Youtuber", "type": "nominal", "title": "YouTuber"},
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "subscribers", "type": "quantitative", "title": "Subscribers"},
            {"field": "channel_type", "type": "nominal", "title": "Channel Type"}
          ]
        }
      }
    ]
  }
  